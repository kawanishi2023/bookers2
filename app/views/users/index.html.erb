
<br>

<div class="container">
<div class="row">
<div class="col-md-3">

<%= render 'books/side', user: @user, book: @book %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Users</h2>

<table class="table table-hover">
<thead>
  <th>image</th>
  <th>name</th>
  <th></th>
</thead>


<tbody>
<% @users.each do |user| %>
<tr>
<td><%= image_tag user.get_profile_image(100,100) %></td>

<td><%= user.name %></td>

<td>
<%= link_to user_path(user.id) do %>
Show
<% end %>
</td>

</tr>
<% end %>
</tbody>

</table>

</div>
</div>
</div>