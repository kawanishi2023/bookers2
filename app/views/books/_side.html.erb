
<br>

<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<table class="table table-hover">

<tbody>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>

</tbody>
</table>

<br>

<%= link_to edit_user_path(user), class:'btn btn-outline-secondary btn-sm btn-block mb-3 setting' do %>
<i class="fas fa-user-cog"></i>
<% end %>

<br>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class:'btn btn-success' do %>
<% end %>
<% end %>